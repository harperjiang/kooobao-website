<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>

	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>com.kooobao.authcenter.web.bean.LoginBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>authService</property-name>
			<value>#{authenticateService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>memberBean</managed-bean-name>
		<managed-bean-class>com.kooobao.cws.web.member.MemberBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>authService</property-name>
			<value>#{authenticateService}</value>
		</managed-property>
	</managed-bean>
	<!-- managed-bean> <managed-bean-name>categoryInfoBean</managed-bean-name> 
		<managed-bean-class>com.kooobao.cws.web.book.CategoryInfoBean </managed-bean-class> 
		<managed-bean-scope>application</managed-bean-scope> <managed-property> <property-name>bookService</property-name> 
		<value>#{bookService}</value> </managed-property> </managed-bean -->

	<managed-bean>
		<managed-bean-name>envConfigBean</managed-bean-name>
		<managed-bean-class>com.kooobao.cws.web.common.EnvConfigBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>bookPageBean</managed-bean-name>
		<managed-bean-class>com.kooobao.cws.web.book.BookPageBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
		<managed-property>
			<property-name>bookService</property-name>
			<value>#{bookService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>articlePageBean</managed-bean-name>
		<managed-bean-class>com.kooobao.cws.web.article.ArticlePageBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
		<managed-property>
			<property-name>articleService</property-name>
			<value>#{articleService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>manageBookBean</managed-bean-name>
		<managed-bean-class>com.kooobao.cws.web.manage.ManageBookBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>bookService</property-name>
			<value>#{bookService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>registerBean</managed-bean-name>
		<managed-bean-class>com.kooobao.cws.web.member.RegisterBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>customerService</property-name>
			<value>#{customerService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>registerConfirmBean</managed-bean-name>
		<managed-bean-class>com.kooobao.cws.web.member.RegisterConfirmBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>customerService</property-name>
			<value>#{customerService}</value>
		</managed-property>
	</managed-bean>
	<navigation-rule>
		<display-name>require_login</display-name>
		<navigation-case>
			<from-outcome>require_login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login_failed</display-name>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>false</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>logout</display-name>
		<navigation-case>
			<from-action>#{loginBean.logout}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>member_login_failed</display-name>
		<from-view-id>/member.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{memberBean.login}</from-action>
			<from-outcome>false</from-outcome>
			<to-view-id>/member.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>member_logout</display-name>
		<from-view-id>/member.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{memberBean.logout}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/member.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/member/register.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{registerBean.register}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/member/register_complete.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{registerBean.register}</from-action>
			<from-outcome>failed</from-outcome>
			<to-view-id>/member/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/member/register_confirm.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{registerConfirmBean.update}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/member/register_confirm_jump.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<lifecycle>
		<phase-listener>com.kooobao.common.web.bean.BeanInitializer</phase-listener>
		<phase-listener>com.kooobao.authcenter.listener.LoginAuthorizer</phase-listener>
	</lifecycle>
	<validator>
    	<validator-id>com.kooobao.validator.Email</validator-id>
    	<validator-class>
      		com.kooobao.common.web.validator.EmailValidator
    	</validator-class>
  	</validator>
</faces-config>
