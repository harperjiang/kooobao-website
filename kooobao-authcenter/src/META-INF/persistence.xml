<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="kooobao-authcenter" transaction-type="RESOURCE_LOCAL">
		<!-- non-jta-data-source>java:/comp/env/jdbc/KooobaoAppDS</non-jta-data-source-->
		<mapping-file>META-INF/orm.xml</mapping-file>
		<class>com.kooobao.authcenter.domain.entity.User</class>
		<properties>
			<property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
			<property name="eclipselink.target-database" value="MySQL"/>
			<property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/web_test"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="jieninan"/>
		</properties>
	</persistence-unit>
</persistence>
