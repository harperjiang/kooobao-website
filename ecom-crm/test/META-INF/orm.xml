<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.1"
	xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.eclipse.org/eclipselink/xsds/persistence/orm http://www.eclipse.org/eclipselink/xsds/eclipselink_orm_2_1.xsd">
	<converter name="enumConverter"
		class="com.kooobao.common.domain.converter.EnumConverter" />

	<table-generator name="customerTG" table="crm_sequence"
		pk-column-name="name" value-column-name="count" pk-column-value="crm_customer" />
	<table-generator name="cfuTG" table="crm_sequence"
		pk-column-name="name" value-column-name="count" pk-column-value="crm_customer_followup" />
	<table-generator name="hintTG" table="crm_sequence"
		pk-column-name="name" value-column-name="count" pk-column-value="crm_hint" />
	<table-generator name="hfuTG" table="crm_sequence"
		pk-column-name="name" value-column-name="count" pk-column-value="crm_hint_followup" />
	<table-generator name="wtnTG" table="crm_sequence"
		pk-column-name="name" value-column-name="count" pk-column-value="crm_wordsplit_wtn" />

	<entity class="com.kooobao.ecom.crm.customer.entity.Customer">
		<primary-key>
			<column name="obj_id" />
		</primary-key>
		<attributes>
			<basic name="oid">
				<column name="obj_id" />
				<generated-value generator="customerTG" />
			</basic>
		</attributes>
	</entity>

	<entity class="com.kooobao.ecom.crm.customer.entity.CustomerFollowup">
		<primary-key>
			<column name="obj_id" />
		</primary-key>
		<attributes>
			<basic name="oid">
				<column name="obj_id" />
				<generated-value generator="cfuTG" />
			</basic>
		</attributes>
	</entity>

	<entity class="com.kooobao.ecom.crm.customer.entity.Hint">
		<primary-key>
			<column name="obj_id" />
		</primary-key>
		<attributes>
			<basic name="oid">
				<column name="obj_id" />
				<generated-value generator="hintTG" />
			</basic>
		</attributes>
	</entity>

	<entity class="com.kooobao.ecom.crm.customer.entity.HintFollowup">
		<primary-key>
			<column name="obj_id" />
		</primary-key>
		<attributes>
			<basic name="oid">
				<column name="obj_id" />
				<generated-value generator="hfuTG" />
			</basic>
		</attributes>
	</entity>
	
	<entity class="com.kooobao.ecom.crm.common.wordsplit.WordTreeNode">
		<primary-key>
			<column name="id" />
		</primary-key>
		<attributes>
			<basic name="id">
				<column name="id" />
				<generated-value generator="wtnTG" />
			</basic>
		</attributes>
	</entity>
</entity-mappings>
