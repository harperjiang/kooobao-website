<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="env.xml" />
	<import resource="auth.xml" />

	<bean id="actorDao" class="com.kooobao.fr.domain.dao.impl.JpaActorDao">
		<property name="entityManager" ref="entityManager" />
	</bean>
	<bean id="customerDao" class="com.kooobao.fr.domain.dao.impl.JpaCustomerDao">
		<property name="entityManager" ref="entityManager" />
	</bean>
	<bean id="financialRecordDao" class="com.kooobao.fr.domain.dao.impl.JpaFinancialRecordDao">
		<property name="entityManager" ref="entityManager" />
	</bean>
	<bean id="attachmentDao" class="com.kooobao.fr.domain.dao.impl.JpaAttachmentDao">
		<property name="entityManager" ref="entityManager" />
	</bean>

	<bean id="attachmentService" class="com.kooobao.fr.service.DefaultAttachmentService">
		<property name="attachmentDao" ref="attachmentDao" />
	</bean>

	<bean id="actorService" class="com.kooobao.fr.service.DefaultActorService">
		<property name="actorDao" ref="actorDao" />
	</bean>
	<bean id="financialRecordService" class="com.kooobao.fr.service.DefaultFinancialRecordService">
		<property name="financialRecordDao" ref="financialRecordDao" />
		<property name="actorDao" ref="actorDao" />
	</bean>
	<bean id="customerService" class="com.kooobao.fr.service.DefaultCustomerService">
		<property name="customerDao" ref="customerDao" />
	</bean>
</beans>