<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>com.kooobao.authcenter.web.bean.LoginBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>authService</property-name>
			<value>#{authenticateService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>financialInfoBean</managed-bean-name>
		<managed-bean-class>com.kooobao.fr.web.record.FinancialInfoBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>financialRecordService</property-name>
			<value>#{financialRecordService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>actorInfoBean</managed-bean-name>
		<managed-bean-class>com.kooobao.fr.web.actor.ActorInfoBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>selectCustomerBean</managed-bean-name>
		<managed-bean-class>com.kooobao.fr.web.record.SelectCustomerBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>customerService</property-name>
			<property-class>com.kooobao.fr.service.CustomerService</property-class>
			<value>#{customerService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>createRecordBean</managed-bean-name>
		<managed-bean-class>com.kooobao.fr.web.record.CreateRecordBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>financialRecordService</property-name>
			<value>#{financialRecordService}</value>
		</managed-property>
		<managed-property>
			<property-name>customerService</property-name>
			<property-class>com.kooobao.fr.service.CustomerService</property-class>
			<value>#{customerService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viewRecordBean</managed-bean-name>
		<managed-bean-class>com.kooobao.fr.web.record.ViewRecordBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>financialRecordService</property-name>
			<value>#{financialRecordService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>searchRecordBean</managed-bean-name>
		<managed-bean-class>com.kooobao.fr.web.record.SearchRecordBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>financialRecordService</property-name>
			<property-class>com.kooobao.fr.service.FinancialRecordService</property-class>
			<value>#{financialRecordService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>supportInfoBean</managed-bean-name>
		<managed-bean-class>com.kooobao.fr.web.common.SupportInfoBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>require_login</display-name>
		<navigation-case>
			<from-outcome>require_login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>logout</display-name>
		<navigation-case>
			<from-action>#{loginBean.logout}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{financialInfoBean.recordReceive}</from-action>
			<to-view-id>/create_record.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{financialInfoBean.requestPayment}</from-action>
			<to-view-id>/create_record.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>create_record.xhtml</display-name>
		<from-view-id>/create_record.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{createRecordBean.save}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/operation_success.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{financialInfoBean.view}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/view_record.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<lifecycle>
		<phase-listener>com.kooobao.common.web.bean.BeanInitializer</phase-listener>
		<phase-listener>com.kooobao.authcenter.listener.LoginAuthorizer</phase-listener>
	</lifecycle>
</faces-config>
