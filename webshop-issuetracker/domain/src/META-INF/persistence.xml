<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="WebshopManagerPU"
		transaction-type="RESOURCE_LOCAL">
		<mapping-file>META-INF/eclipselink-orm.xml</mapping-file>
		<class>com.kooobao.wsm.domain.entity.SimpleEntity</class>
		<class>com.kooobao.wsm.domain.entity.VersionEntity</class>
		<class>com.kooobao.wsm.domain.entity.issue.Issue</class>
		<class>com.kooobao.wsm.domain.entity.issue.TrackLog</class>
		<class>com.kooobao.wsm.domain.entity.issue.TroubleCase</class>
		<shared-cache-mode>ALL</shared-cache-mode>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/webshop_manage" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.jdbc.read-connections.shared" value="true"/>
			<property name="eclipselink.jdbc.read-connections.min" value="3"/>
			<property name="eclipselink.jdbc.read-connections.max" value="6"/>
			<property name="eclipselink.logging.level.sql" value="FINEST"/>
			<property name="javax.persistence.jdbc.password" value="jieninan"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
		</properties>

	</persistence-unit>
</persistence>