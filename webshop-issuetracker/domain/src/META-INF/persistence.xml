<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="WebshopManagerPU"
		transaction-type="RESOURCE_LOCAL">
		<non-jta-data-source>java:/comp/env/jdbc/KooobaoAppDS</non-jta-data-source>
		<mapping-file>META-INF/eclipselink-orm.xml</mapping-file>
		<class>com.kooobao.common.domain.entity.SimpleEntity</class>
		<class>com.kooobao.common.domain.entity.VersionEntity</class>
		<class>com.kooobao.wsm.domain.entity.issue.Issue</class>
		<class>com.kooobao.wsm.domain.entity.issue.TrackLog</class>
		<class>com.kooobao.wsm.domain.entity.issue.TroubleCase</class>
		<shared-cache-mode>ALL</shared-cache-mode>
		<properties>
			<property name="eclipselink.logging.level.sql" value="FINEST"/>
			<property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
		</properties>

	</persistence-unit>
</persistence>