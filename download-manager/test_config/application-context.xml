<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="env.xml" />

	<bean id="fileItemDao" class="com.kooobao.dm.JpaFileItemDao">
		<property name="entityManager" ref="entityManager" />
	</bean>

	<bean id="memoryFileItemDao" class="com.kooobao.dm.MemoryFileItemDao" />

	<bean id="downloadService" class="com.kooobao.dm.DefaultDownloadService">
		<property name="fileItemDao" ref="memoryFileItemDao" />
	</bean>

</beans>