<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="env.xml" />
	<import resource="auth.xml" />

	<bean id="bookService" class="com.kooobao.lm.book.DummyBookService" />
	<bean id="profileService" class="com.kooobao.lm.profile.DummyProfileService" />
	<bean id="transactionService" class="com.kooobao.lm.bizflow.DummyTransactionService" />


	<bean id="indexPageBean" class="com.kooobao.lm.IndexPageBean">
		<property name="bookService" ref="bookService" />
	</bean>
	<bean id="hotSearchBean" class="com.kooobao.lm.book.HotSearchBean">
		<property name="bookService" ref="bookService" />
	</bean>
	<bean id="suppDataBean" class="com.kooobao.lm.common.SuppDataBean">
		<property name="bookService" ref="bookService" />
	</bean>

	<bean id="cartManager" class="com.kooobao.lm.bizflow.CartManager">
		<property name="bookService" ref="bookService" />
	</bean>

	<bean id="favManager" class="com.kooobao.lm.bizflow.FavManager">
		<property name="profileService" ref="profileService" />
		<property name="transactionService" ref="transactionService" />
	</bean>
</beans>