		transaction-type="RESOURCE_LOCAL">
		<non-jta-data-source>java:/comp/env/jdbc/KooobookDS</non-jta-data-source>
		<mapping-file>META-INF/orm.xml</mapping-file>
		<class>com.kooobao.lm.profile.entity.Address</class>
		<class>com.kooobao.lm.profile.entity.ActivationRecord</class>
		<class>com.kooobao.lm.profile.entity.PersonalInfo</class>
		<class>com.kooobao.lm.profile.entity.Visitor</class>
		<class>com.kooobao.lm.book.entity.Book</class>
		<class>com.kooobao.lm.book.entity.Category</class>
		<class>com.kooobao.lm.book.entity.Stock</class>
		<class>com.kooobao.lm.optlog.entity.BorrowCount</class>
		<class>com.kooobao.lm.optlog.entity.SearchLog</class>
		<class>com.kooobao.lm.optlog.entity.SearchSummary</class>
		<class>com.kooobao.lm.bizflow.entity.ExpireRecord</class>
		<class>com.kooobao.lm.bizflow.entity.FavoriteRecord</class>
		<class>com.kooobao.lm.bizflow.entity.Operation</class>
		<class>com.kooobao.lm.bizflow.entity.Transaction</class>
		<class>com.kooobao.lm.profile.entity.BasicAddress</class>
		<class>com.kooobao.lm.book.entity.BookRelation</class>
		<class>com.kooobao.lm.book.entity.Comment</class>
		<class>com.kooobao.lm.article.entity.News</class>
		<properties>
			<property name="eclipselink.logging.level.sql" value="ALL" />
		</properties>
	</persistence-unit>
</persistence>
