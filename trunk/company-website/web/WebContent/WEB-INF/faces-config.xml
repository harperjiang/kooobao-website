<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
	<managed-bean>
		<managed-bean-name>indexPageBean</managed-bean-name>
		<managed-bean-class>com.kooobao.cws.web.index.IndexPageBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>bookService</property-name>
			<value>#{bookService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>envConfigBean</managed-bean-name>
		<managed-bean-class>com.kooobao.cws.web.common.EnvConfigBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>manageBookBean</managed-bean-name>
		<managed-bean-class>com.kooobao.cws.web.manage.ManageBookBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>bookService</property-name>
			<value>#{bookService}</value>
		</managed-property>
	</managed-bean>

	<!-- lifecycle> <phase-listener>com.kooobao.common.web.bean.BeanInitializer</phase-listener> 
		<phase-listener>com.kooobao.authcenter.listener.LoginAuthorizer</phase-listener> 
		</lifecycle -->
</faces-config>
