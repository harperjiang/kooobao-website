<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="env.xml" />

	<bean id="productDao" class="com.kooobao.ecom.order.product.dao.JpaProductDao">
		<property name="entityManager" ref="entityManager" />
	</bean>
	<bean id="purchaseDao" class="com.kooobao.ecom.order.purchase.dao.JpaPurchaseDao">
		<property name="entityManager" ref="entityManager" />
	</bean>
	<bean id="customerDao" class="com.kooobao.ecom.order.customer.dao.JpaCustomerDao">
		<property name="entityManager" ref="entityManager" />
	</bean>
	<bean id="deliverySiteDao" class="com.kooobao.ecom.order.delivery.dao.JpaDeliverySiteDao">
		<property name="entityManager" ref="entityManager" />
	</bean>
	<bean id="deliveryDao" class="com.kooobao.ecom.order.delivery.dao.JpaDeliveryDao">
		<property name="entityManager" ref="entityManager" />
	</bean>
	<bean id="returnRequestDao" class="com.kooobao.ecom.order.returnreq.dao.JpaReturnRequestDao">
		<property name="entityManager" ref="entityManager" />
	</bean>
</beans>