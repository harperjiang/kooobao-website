<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="env.xml" />

	<bean id="hintDao" class="com.kooobao.ecom.crm.customer.dao.JpaHintDao">
		<property name="entityManager" ref="entityManager" />
	</bean>

	<bean id="customerDao" class="com.kooobao.ecom.crm.customer.dao.JpaCustomerDao">
		<property name="entityManager" ref="entityManager" />
	</bean>

	<bean id="settingDao" class="com.kooobao.ecom.setting.dao.JpaSettingDao">
		<property name="entityManager" ref="entityManager" />
	</bean>

	<bean id="uniqueEntryDao" class="com.kooobao.ecom.crm.common.unique.JpaUniqueEntryDao">
		<property name="entityManager" ref="entityManager" />
	</bean>

	<bean id="dictDao" class="com.kooobao.ecom.crm.common.wordsplit.DefaultDictDao">
		<property name="entityManager" ref="entityManager" />
	</bean>

	<bean id="uniquenessService"
		class="com.kooobao.ecom.crm.common.unique.DefaultUniquenessService">
		<property name="uniqueEntryDao" ref="uniqueEntryDao" />
	</bean>

	<bean id="wordService"
		class="com.kooobao.ecom.crm.common.wordsplit.DefaultWordService" />

	<bean id="memoryCustomerDao" class="com.kooobao.ecom.crm.customer.MemoryCustomerDao" />

	<bean id="customerService" class="com.kooobao.ecom.crm.customer.DefaultCustomerService">
		<property name="wordService" ref="wordService" />
		<property name="customerDao" ref="memoryCustomerDao" />
		<property name="settingDao">
			<bean class="com.kooobao.ecom.crm.customer.DummySettingDao" />
		</property>
	</bean>
</beans>