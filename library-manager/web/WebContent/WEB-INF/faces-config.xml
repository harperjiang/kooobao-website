<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
	<component>
		<display-name>FuncFor</display-name>
		<component-type>com.kooobao.jsf.func.for</component-type>
		<component-class>com.kooobao.common.web.tag.FuncFor</component-class>
	</component>
	<converter>
		<converter-id>selectItemConverter</converter-id>
		<converter-class>com.kooobao.common.web.converter.SelectItemConverter</converter-class>
	</converter>

	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>com.kooobao.lm.profile.LoginBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>authService</property-name>
			<value>#{authenticateService}</value>
		</managed-property>
		<managed-property>
			<property-name>profileService</property-name>
			<value>#{profileService}</value>
		</managed-property>
	</managed-bean>
	<navigation-rule>
		<display-name>cart.xhtml</display-name>
		<from-view-id>/cart.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{cartBean.confirm}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/borrow_confirm.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>search</display-name>
		<navigation-case>
			<from-action>#{searchBookBean.search}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/search_book.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>search</display-name>
		<navigation-case>
			<from-action>#{hotSearchBean.hotSearch}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/search_book.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>borrow_confirm.xhtml</display-name>
		<from-view-id>/borrow_confirm.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{borrowConfirmBean.confirm}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/borrow_finish.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>register_done.xhtml</display-name>
		<from-view-id>/register.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{registerBean.register}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/register_done.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{registerBean.register}</from-action>
			<from-outcome>failed</from-outcome>
			<to-view-id>/register.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>category.xhtml</display-name>
		<from-view-id>/category.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{categoryBean.prevPage}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/category.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{categoryBean.nextPage}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/category.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>404.xhtml</display-name>
		<navigation-case>
			<from-outcome>not_found</from-outcome>
			<to-view-id>/404.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>require_login_lm</display-name>
		<navigation-case>
			<from-outcome>require_login_lm</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<render-kit>
		<display-name>KooobaoRenderKit</display-name>
		<renderer>
			<component-family>com.kooobao.jsf.func.for</component-family>
			<renderer-type>com.kooobao.jsf.func.for</renderer-type>
			<renderer-class>com.kooobao.common.web.tag.FuncForRender</renderer-class>
		</renderer>
		<renderer>
			<component-family>javax.faces.Message</component-family>
			<renderer-type>com.kooobao.jsf.ui.Message</renderer-type>
			<renderer-class>com.kooobao.common.web.tag.HtmlMessageDialogRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>javax.faces.Messages</component-family>
			<renderer-type>com.kooobao.jsf.ui.Messages</renderer-type>
			<renderer-class>com.kooobao.common.web.tag.HtmlMessagesDialogRenderer</renderer-class>
		</renderer>
	</render-kit>
	<lifecycle>
		<phase-listener>com.kooobao.common.web.bean.BeanInitializer</phase-listener>
		<phase-listener>com.kooobao.authcenter.listener.LoginAuthorizer</phase-listener>
	</lifecycle>
</faces-config>
